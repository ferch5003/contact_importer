<div class="d-grid gap-4">
  <h1>Contact Files - Match CSV Columns</h1>
  <div class="accordion">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          CSV File Headers
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <ul class="list-group">
            <% @headers.each do |header| %>
              <li class="list-group-item"><%= header %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%= form_for :import, url: contact_file_imports_path do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.select :name, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.select :email, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= form.label :telephone, class: 'form-label' %>
      <%= form.select :telephone, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= form.label :address, class: 'form-label' %>
      <%= form.select :address, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= form.label :date_of_birth, class: 'form-label' %>
      <%= form.select :date_of_birth, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= form.label :credit_card, class: 'form-label' %>
      <%= form.select :credit_card, options_for_select(@headers), {}, { class: 'form-select' } %>
    </div>
    <div class="mb-3 float-end">
      <%= form.submit 'Upload', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>